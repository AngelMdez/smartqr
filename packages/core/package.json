{
  "name": "@smartqr/core",
  "version": "0.1.0",
  "description": "SmartQR core: rules engine, resolver & QR generator",
  "license": "MIT",
  "author": "Your Name",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<org-or-user>/smartqr.git"
  },
  "bugs": {
    "url": "https://github.com/AngelMdez/smartqr/issues"
  },
  "homepage": "https://github.com/AngelMdez/smartqr#readme",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "pnpm build:js && pnpm build:types",
    "build:js": "tsup src/index.ts --format esm,cjs --clean --tsconfig tsconfig.build.json",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "qrcode": "^1.5.3",
    "ua-parser-js": "^1.0.37",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/qrcode": "^1.5.5"
  }
}
