{
  "name": "@smartqr/react",
  "version": "0.1.0",
  "description": "SmartQR React bindings (SmartQRCode component & useSmartQR hook)",
  "license": "MIT",
  "author": "Your Name",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<org-or-user>/smartqr.git"
  },
  "bugs": {
    "url": "https://github.com/AngelMdez/smartqr/issues"
  },
  "homepage": "https://github.com/AngelMdez/smartqr#readme",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup src/index.tsx --dts --format esm,cjs --tsconfig tsconfig.build.json",
    "dev": "tsup src/index.tsx --dts --format esm,cjs --watch",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@smartqr/core": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^20.19.11",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.0"
  }
}
