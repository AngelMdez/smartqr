{
  "name": "smartqr-monorepo",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "//": "----- High-level workspace scripts -----",
    "build": "pnpm -w -F @smartqr/core build && pnpm -w -F @smartqr/react build",
    "test": "pnpm -F @smartqr/core test -- --run && pnpm -F @smartqr/react test -- --run",
    "lint": "pnpm -r --if-present lint",
    "typecheck": "pnpm -r --if-present typecheck",
    "//changesets": "----- Changesets & release flow -----",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm -w -r --filter './packages/*' publish --access public"
  },
  "dependencies": {
    "@smartqr/core": "workspace:*",
    "qrcode": "^1.5.4",
    "ua-parser-js": "^1.0.40",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.2.1",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/ua-parser-js": "^0.7.39",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
