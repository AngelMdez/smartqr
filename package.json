{
  "name": "smartqr-monorepo",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "overrides": {
      "@types/node": "20.19.11",
      "vite": "7.1.2"
    }
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AngelMdez/smartqr.git"
  },
  "license": "MIT",
  "scripts": {
    "//": "----- High-level workspace scripts -----",
    "build": "pnpm -w -F @smartqr/core build && pnpm -w -F @smartqr/react build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm -r --if-present typecheck",
    "//changesets": "----- Changesets & release flow -----",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm changeset version",
    "publish:from-changesets": "pnpm -r build && pnpm -r --filter \"./packages/*\" publish --access public --provenance",
    "test": "pnpm -F @smartqr/core test -- --run && pnpm -F @smartqr/react test -- --run",
    "test:coverage": "pnpm -F @smartqr/core test:coverage && pnpm -F @smartqr/react test:coverage"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.33.0",
    "@types/qrcode": "^1.5.5",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "qrcode": "^1.5.4",
    "zod": "^3.25.76"
  }
}
