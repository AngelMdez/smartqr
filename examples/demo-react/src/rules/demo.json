{
  "version": 1,
  "rules": [
    {
      "when": { "os": ["ios"] },
      "action": { "deeplink": "myapp://home" },
      "fallback": { "web": "https://example.com/ios" },
      "reason": "Prefer app on iOS"
    },
    {
      "when": { "os": ["android"] },
      "action": { "deeplink": "myapp://home" },
      "fallback": { "web": "https://example.com/android" },
      "reason": "Prefer app on Android"
    },
    {
      "when": { "lang": ["es", "es-ES"] },
      "action": { "web": "https://es.example.com" },
      "reason": "Spanish locale → ES site"
    },
    {
      "when": { "dateRange": { "from": "2025-08-01T00:00:00.000Z", "to": "2025-08-31T23:59:59.999Z" } },
      "action": { "web": "https://example.com/campaign/summer-2025" },
      "reason": "Campaign window → Summer 2025 landing"
    },
    {
      "when": { "rollout": 30 },
      "action": { "web": "https://example.com/landing-new" },
      "reason": "30% rollout → new landing"
    }
  ],
  "default": {
    "web": "https://example.com",
    "reason": "Default route"
  }
}
