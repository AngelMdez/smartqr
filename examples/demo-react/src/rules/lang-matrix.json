{
  "version": 1,
  "rules": [
    {
      "when": { "lang": ["es", "es-ES"] },
      "action": { "web": "https://es.example.com" },
      "reason": "Spanish → ES site"
    },
    {
      "when": { "lang": ["en", "en-US", "en-GB"] },
      "action": { "web": "https://en.example.com" },
      "reason": "English → EN site"
    },
    {
      "when": { "lang": ["fr", "fr-FR"] },
      "action": { "web": "https://fr.example.com" },
      "reason": "French → FR site"
    },
    {
      "when": { "lang": ["de", "de-DE"] },
      "action": { "web": "https://de.example.com" },
      "reason": "German → DE site"
    }
  ],
  "default": {
    "web": "https://example.com",
    "reason": "Default route"
  }
}
